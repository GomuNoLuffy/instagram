<div class="row posts">
  <div class="container flex-col">
    <% if @posts.empty? %>
      <div class="empty-list">
        <h2 class="title">No Result</h2>
      </div>
    <% else %>
      <% @posts.each do |post| %>
        <%= render :partial => "posts/partials/post_row", :locals => {:post => post}  %>
      <% end %>
    <% end %>
    
  </div>
</div>