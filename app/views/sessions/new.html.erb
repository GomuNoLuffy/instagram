<div class="login-wrapper">
  <div class="form-login flex-col">
    <div class="insta-logo icon"></div>
    <%= form_for @user, :url => sessions_path, 
                        :html => {:class => "form", :'data-name' => "log-in"} do  |f| %>
      <div class="form-group">
        <%= f.email_field :email, :class => "form-control", :placeholder => "Email Address" %> 
      </div>
      <div class="form-group">
        <%= f.password_field :password, :class => "form-control", :placeholder => "Password" %> 
      </div>
      
      <%= f.submit "Log In", :class => "btn btn-fb" %> 
      <div class="row message error"></div>
    <% end %> 
  </div>
  <div class="extra-wrapper" id="sign-up">
    Don't have an account? <a href="#" class="link-to" data-parent="sign-up">Sign Up</a>
  </div> 
</div>